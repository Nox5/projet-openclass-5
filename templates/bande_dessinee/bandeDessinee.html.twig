{% extends 'base.html.twig' %}

{% block title %}Titre de la bd{% endblock %}



{% block body %}

    <header class="masthead" style="background-image: url('image/biblio.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>{{ bandeDessinee.titre|raw }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container blocAutourDeLaBd">
        <div class="row">
            <div class="col-md-7">
            <a href="#">
                <img class="img-fluid rounded mb-3 mb-md-0" src="{{ asset('image/'~bandeDessinee.image|e) }}" alt="">
            </a>
            </div>
            <div class="col-md-5 textResume">
                <h3>{{ bandeDessinee.titre|raw }}</h3>
                <p>{{ bandeDessinee.contenu|raw }}</p>
                <a href="{{ path("top5") }}"  class="btn btn-primary">Top 5 bande dessinée</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path("deleteBd", { id:bandeDessinee.id }) }}" class="btn btn-primary">Supprimer du top 5</a>
                {% elseif is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <a href="{{ path("addwishlist", { id:bandeDessinee.id }) }}"  class="btn btn-primary boutonAjouterWishList">Ajouter à ma wishlist</a>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}

